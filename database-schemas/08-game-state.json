{
  "table_name": "game_state",
  "description": "User gamification data - Import EIGHTH (independent of habits)",
  "import_order": 8,
  "dependencies": [],
  "fields": {
    "id": {"type": "auto_number", "primary": true},
    "user_id": {"type": "text", "required": true, "unique": true},
    "total_points": {"type": "number", "default": 0},
    "level": {"type": "number", "default": 1},
    "daily_streak": {"type": "number", "default": 0},
    "longest_streak": {"type": "number", "default": 0},
    "perfect_days": {"type": "number", "default": 0, "description": "Days with 100% habit completion"},
    "habits_completed_today": {"type": "number", "default": 0},
    "total_habits_completed": {"type": "number", "default": 0},
    "theme": {"type": "single_select", "options": ["light", "dark", "auto"], "default": "auto"},
    "week_starts_on": {"type": "single_select", "options": ["sunday", "monday"], "default": "monday"},
    "notifications_enabled": {"type": "boolean", "default": true},
    "sound_enabled": {"type": "boolean", "default": true},
    "last_login_date": {"type": "date"},
    "last_activity_date": {"type": "date"},
    "timezone": {"type": "text", "default": "UTC"},
    "created_at": {"type": "date", "auto_now_add": true},
    "updated_at": {"type": "date", "auto_now": true}
  },
